{
  "name": "bridge-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/node": "^16.11.26",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@walletconnect/ethereum-provider": "^1.7.4",
    "ethers": "^5.5.4",
    "normalize.css": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-jss": "^10.9.0",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^4.0.3",
    "serve": "^13.0.2",
    "typescript": "^4.5.5",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@hermeznetwork/eslint-config-hermez": "^1.0.1",
    "husky": "^7.0.4",
    "prettier": "^2.5.1"
  },
  "scripts": {
    "build": "react-scripts build",
    "format": "prettier --write .",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "prepare": "husky install",
    "start:dev": "react-scripts start",
    "start:prod": "serve -s -C -p 80 build"
  },
  "eslintConfig": {
    "extends": "@hermeznetwork/eslint-config-hermez"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
