{
  "name": "zkevm-bridge-ui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "npm run lint -- --cache && tsc --incremental && vite",
    "build": "npm run lint && tsc && vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "generate-contract-types": "./scripts/generate-contract-types.sh",
    "lint": "eslint --fix --ext .ts,.tsx .",
    "postinstall": "npm run generate-contract-types",
    "prepare": "husky install"
  },
  "dependencies": {
    "@walletconnect/ethereum-provider": "^1.7.8",
    "axios": "^0.27.2",
    "ethers": "^5.6.9",
    "events": "^3.3.0",
    "normalize.css": "^8.0.1",
    "platform": "^1.3.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-jss": "^10.9.1",
    "react-router-dom": "^6.3.0",
    "stacktrace-js": "^2.0.2",
    "zod": "^3.17.10"
  },
  "devDependencies": {
    "@hermeznetwork/eslint-config-hermez": "^1.1.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@types/node": "^18.6.2",
    "@types/platform": "^1.3.4",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.0",
    "eslint": "^8.20.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-plugin-svgr": "^2.2.1"
  },
  "eslintConfig": {
    "extends": "@hermeznetwork/eslint-config-hermez"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
